{%  extends "base.jinja" %}

{% if page %}
    {% set page_name = "edit_page" %}
{% else %}
    {% set page_name = "create_page" %}
{% endif %}

{% block content %}
    {% if page_name == "create_page" %}
        {% trans %} Creating new page {{ page_title }} {% endtrans %}
    {% else %}
        {% trans %} Editing page {{ page_title }} {% endtrans %}
    {% endif %}
    <form action="." method="post">
        {%  csrf_token %}
        <ul id="editform_ul">
            <li>
                <ul id="edit_commands">
                    <li> <input type="submit" value="{% trans %}Save{% endtrans %}"/> </li>
                    <li> <input id="preview" type="submit" value="{% trans %}Preview{% endtrans %}"/> </li>
                </ul>
            </li>
            <li><div id="preview_field"></div></li>
            {{ form.as_ul() }}
        </ul>
    </form>
{% endblock %}

{% block js %}
    {{ super() }}
    <script type="text/javascript" src="/media/js/utils.js"></script>
    <script type="text/javascript">
        $(function(){
            csrftokenize();

            $("#preview").click(function(ev){
                ev.prevent_default();
                $.post("{{ url_for('wiki_preview_page')}}", 
                        {content: $("#id_content").val()},
                        function(data){
                            $("#preview_field").html(data);
                        }
                )
            })
        });
    </script>
{% endblock js %}
